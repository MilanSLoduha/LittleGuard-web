// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String
  cameras      Camera[]
  pairingCodes PairingCode[]
  cameraAccesses   CameraAccess[]
  shareCodesCreated CameraShareCode[] @relation("ShareCodesCreated")
  shareCodesUsed    CameraShareCode[] @relation("ShareCodesUsed")
}

model Camera {
  id          String   @id @default(cuid())
  name        String   @default("My Camera")
  macAddress  String   @unique
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isOnline    Boolean  @default(false)
  lastSeen    DateTime @default(now())
  createdAt   DateTime @default(now())
  accesses    CameraAccess[]
  shareCodes  CameraShareCode[]
}

model PairingCode {
  id        String   @id @default(cuid())
  code      String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  used      Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model CameraAccess {
  id        String   @id @default(cuid())
  cameraId  String
  userId    String
  role      String   @default("viewer")
  createdAt DateTime @default(now())

  camera Camera @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([cameraId, userId])
}

model CameraShareCode {
  id           String   @id @default(cuid())
  code         String   @unique
  cameraId     String
  createdById  String
  usedById     String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  usedAt       DateTime?

  camera      Camera @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  createdBy   User   @relation("ShareCodesCreated", fields: [createdById], references: [id], onDelete: Cascade)
  usedBy      User?  @relation("ShareCodesUsed", fields: [usedById], references: [id])
}
